@model User
<h1 style="text-align: center;">Edit Profile</h1>
<a href="/user/@ViewBag.getUser.UserId">Go Back</a>
<div>
    <form asp-action="Update" method="post">
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName" style="color: red; font-size: 12px;"></span><br>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName" style="color: red; font-size: 12px;"></span><br>
        </div>
        <div class="form-group">
            <label asp-for="Password">New Password</label>
            <input asp-for="Password" class="form-control">
            <span asp-validation-for="Password" style="color: red; font-size: 12px;"></span><br>
        </div>
        <div class="form-group">
            <label asp-for="Confirm">Confirm Password</label>
            <input asp-for="Confirm" class="form-control">
            <span asp-validation-for="Confirm" style="color: red; font-size: 12px;"></span><br>
        </div>
        <input type="submit" value="Update" class="btn btn-danger">
    </form>
</div>